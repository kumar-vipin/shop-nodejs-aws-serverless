{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES6",
    "outDir": ".build",
    "rootDir": "./src",
    "types": [
      "node",
      "jest",
      "aws-lambda"
    ],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
